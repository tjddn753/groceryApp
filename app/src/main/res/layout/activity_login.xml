<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">
    <TextView
        android:textColor="@color/purple_700"
        android:id="@+id/tv_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/textSize"
        android:text="Sign In"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="@dimen/textSize"
        android:layout_marginEnd="@dimen/textSize"
        android:background="@drawable/textview_background"
        android:hint="Email"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_signin"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="@dimen/textSize"
        android:layout_marginEnd="@dimen/textSize"
        android:background="@drawable/textview_background"
        android:hint="Password"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        tools:layout_editor_absoluteX="24dp" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_margin="@dimen/textSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_background"
        android:text="Sign In"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        tools:ignore="MissingConstraints" />

    <Button

        android:id="@+id/btn_backto_signup"
        android:layout_margin="@dimen/textSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backto_signin"
        android:text="Already have and account?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_signin"
        tools:ignore="MissingConstraints"
        />
</androidx.constraintlayout.widget.ConstraintLayout>