<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".shipping.ShippingFragment"
    android:layout_marginTop="60dp">

    <TextView
        android:textSize="24dp"
        android:textColor="#5900FF"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Thank you for you order!"
        android:id="@+id/msg"
        android:padding="12dp"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:text="Here is your summary of your order."
        android:id="@+id/msg_summry"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        tools:text="Id"
        android:gravity="center"
        android:id="@+id/tv_id"
        android:padding="12dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        tools:text="date"
        android:gravity="center"
        android:id="@+id/tv_date"
        android:padding="12dp"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        tools:text="Adress"
        android:gravity="center"
        android:id="@+id/tv_address"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
         android:text="Payment Summry"
        android:id="@+id/msg_payment"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Total price"
        android:id="@+id/tv_total_price"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="You Paid"
        android:id="@+id/tv_you_pay"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Payment type"
        android:id="@+id/tv_payment_type"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_marginTop="24dp"
        android:id="@+id/btn_track_order"
        android:text="Track Order"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>