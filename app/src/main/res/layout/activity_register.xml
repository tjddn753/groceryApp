<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity">

    <TextView
         android:textColor="@color/purple_700"
        android:id="@+id/tv_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/textSize"
        android:text="Create an Account"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/textSize"
        android:background="@drawable/textview_background"
        android:hint="First Name"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_create_account" />

    <EditText
        android:id="@+id/et_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="@dimen/textSize"
        android:layout_marginEnd="@dimen/textSize"
        android:background="@drawable/textview_background"
        android:hint="Last Name"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_firstname"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="@dimen/textSize"
        android:layout_marginEnd="@dimen/textSize"
        android:background="@drawable/textview_background"
        android:hint="Address"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_lastname"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:id="@+id/et_mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="@dimen/textSize"
        android:layout_marginEnd="@dimen/textSize"
        android:background="@drawable/textview_background"
        android:hint="Mobile Number"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_address"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="@dimen/textSize"
        android:layout_marginEnd="@dimen/textSize"
        android:background="@drawable/textview_background"
        android:hint="Email"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_mobile_number"
        tools:layout_editor_absoluteX="24dp" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="@dimen/textSize"
        android:layout_marginEnd="@dimen/textSize"
        android:background="@drawable/textview_background"
        android:hint="Password"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        tools:layout_editor_absoluteX="24dp" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_margin="@dimen/textSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_background"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        tools:ignore="MissingConstraints" />
<TextView
    android:id="@+id/tv_privacy"
    android:textColor="#FFDFDDE3"
    app:layout_constraintTop_toBottomOf="@id/btn_signup"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="By processing Sinup up you agree with the Terms of\n
        Services and Privacy Policy"/>
    <Button

        android:id="@+id/btn_backto_signin"
        android:layout_margin="@dimen/textSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backto_signin"
        android:text="Already have and account?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_privacy"
        tools:ignore="MissingConstraints"
        />

    <ProgressBar
        android:id="@+id/pb_processing"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_signup"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
